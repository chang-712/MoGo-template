mixin storyItem(src="./images/img-blog1.png", dateNumber = 15, dateText = "Jan", title= "Lorem ipsum dolor sit amet.", desc= "Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.", views = 542, comment= 17)
	li.story-item 
		.story-media
			img.story-image(src= src)
			.story-date
				span.story-date-number= dateNumber
				span.story-date-text.text.text--light= dateText
		h3.story-title= title
		story-desc.text 
			p.story-desc-inner= desc
		.story-meta
			.story-meta-item 
				i.fa.fa-eye.story-meta-icon
				span.story-meta-number.text= views
			.story-meta-item 
				i.fa.fa-comment.story-meta-icon
				span.story-meta-number= comment 
